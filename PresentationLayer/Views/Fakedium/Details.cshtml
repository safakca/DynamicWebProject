@using EntityLayer.Concrete 
@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

@{
    Article article = ViewBag.Article;
}



<div class="container">

    <div class="row mb-2">
        <div class="d-flex justify-content-end mb-2 py-3">
            <a asp-action="Index" asp-controller="Fakedium" class="text-dark btn btn-outline-secondary">Back to Main Page</a> 
        </div>

        @if (article != null)
        {
            <div class="col-md-12">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h4 class="mb-3">
                            @Html.DisplayFor(model => article.Title)
                        </h4>
                        <div class="mb-3 text-muted"> @Html.DisplayFor(model => article.CreatedDate)</div>
                        <div class="card-text fs-5 lh-lg mb-auto">
                            @Html.DisplayFor(model => article.Description)
                        </div>
                    </div>
                    <img class="card-img-right flex-auto d-none d-md-block mt-5 me-5" src="~/flexy-bootstrap-lite/assets/images/book-1.jpg" alt="Fakedium" style="width:250px; height:250px;">
                </div>
            </div> 
        }
    </div> 
</div>