@using EntityLayer.Concrete 

@{ 
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

@{
    List<Article> article = ViewBag.Article;
}
 
<div class="row mb-2">
    @if (article != null)
    {
        foreach (var item in article)
        {
            <div class="col-md-4">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h4 class="mb-0">
                            <a class="text-dark text-decoration-none" href="#" style="Overflow:hidden;
                                      max-height: 4rem;
                                      line-height: 2rem;
                                      -webkit-box-orient: vertical;
                                      -webkit-line-clamp: 2;
                                      text-overflow: ellipsis;
                                      display: block;">@item.Title</a>
                        </h4>
                        <div class="mb-1 text-muted">@item.CreatedDate</div>
                        <div class="card-text mb-auto" style="Overflow:hidden;
                                      max-height: 6rem;
                                      line-height: 1.5rem;
                                      -webkit-box-orient: vertical;
                                      -webkit-line-clamp: 5;
                                      text-overflow: ellipsis;
                                      display: block;">
                            @item.Description
                        </div>

                        @Html.ActionLink("Continue reading", "Details", new { @item.Id }, new{@class="text-dark"})

                    </div>
                    <img class="card-img-right flex-auto d-none d-md-block" src="~/flexy-bootstrap-lite/assets/images/book-1.jpg" alt="Fakedium" style="width:200px; height:200px;">
                </div>
            </div>
        }
    }
</div>
   

<div class="container">
    <div class="row">
        <div class="col-md-8 blog-main">
            <h3 class="pb-3 mb-4 font-italic border-bottom">
                UpSchool Story..
            </h3>

            <div class="blog-post">
                <h5 class="blog-post-title"> What is UpSchool?</h5>
                <p class="blog-post-meta">@DateTime.Now

                <p>
                    It is a very strong and caring team that works hard to reduce the inequality between men and women in the sector. <br />
                    If your path crosses with upSchool, you are one of the lucky people.
                    You are a member of a very involved team.<br />
                    What will you gain?
                </p>

                <ul>
                    <li>Soul of sisterhood</li>
                    <li>Better than feedforward feedback</li>
                    <li>Endless polls :)</li>
                    <li>Weekly meetings (I think it was the best)</li>
                    <li>Demo job interview with companies</li>
                    <li>New job opportunity</li>
                    <li>Different perspective</li>
                </ul>

            </div><!-- /.blog-post -->


        </div><!-- /.blog-main -->

        <aside class="col-md-4 blog-sidebar">
            <div class="p-3 mb-3 bg-light rounded">
                <h4 class="font-italic">About Me</h4>
                <p class="mb-0">
                    I am Şafak, <em>I was born 1993 in Beyoğlu</em> <br />
                    I graduated from computer engineering in 2019 and have been working as a data analyst more than 2 and more than 1 years and as a backend developer. <br />
                    I graduated from computer engineering in 2019 and have been working as a data analyst more than 2 and more than 1 years and as a backend developer.
                </p> <br />
                <em> Hope to like it...</em>
            </div>

            <div class="p-3">
                <h4 class="font-italic">Elsewhere</h4>
                <ol class="list-unstyled">
                    <li><a href="https://github.com/safakca">GitHub</a></li>
                    <li><a href="https://www.linkedin.com/in/safakakca/">LinkedIn</a></li>
                    <li><a href="https://medium.com/safakkca">Medium</a></li>
                </ol>
            </div>
        </aside><!-- /.blog-sidebar -->

    </div><!-- /.row -->

</div><!-- /.container -->
 