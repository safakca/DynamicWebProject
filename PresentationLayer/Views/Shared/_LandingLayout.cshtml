<body>

    <div class="container">
        <header class="blog-header py-3 border-bottom">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-6 text-left">
                    <a class="blog-header-logo" asp-controller="Fakedium" asp-action="Index"><img src="~/flexy-bootstrap-lite/assets/images/fakedium-logo.png" alt="Fakedium" width="150" height="60" /></a>
                </div>
                <div class="col-6 d-flex justify-content-end align-items-center">
                    <a class="btn btn-sm btn-outline-success" asp-controller="Account" asp-action="Login">Sign up</a> &nbsp;
            @*          <a class="btn btn-sm btn-outline-success" asp-controller="Fakedium" asp-action="Chatbot">Ask</a>*@
                </div>
            </div>
        </header>

        @*     <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-start fs-6 text-decoration-none">
        <a class="p-2 text-muted" href="#">About</a>
        <a class="p-2 text-muted" href="#">Article</a>
        <a class="p-2 text-muted" href="#">Author</a>
        <a class="p-2 text-muted" href="#">Contact</a>
        </nav>
        </div>*@

        <div class="p-3 p-md-5 mb-4 text-white rounded banner-img">
            <div class="col-md-6 px-0">
                <h1 class="display-4 font-italic">Welcome to Fakedium</h1>
                <p class="lead my-3"> You can read the articles written by others and become a member and add your article.</p>
                <p class="lead mb-0"></p>
            </div>
        </div>

    </div>

    <div class="container">
        @RenderBody()
    </div>


     <footer class="blog-footer">
        <div class="container text-center mt-5 border-top py-3">
            &copy; 2023 - Fakedium - <a asp-area="" asp-controller="Fakedium" asp-action="Index">Home</a>
        </div>
    </footer>

