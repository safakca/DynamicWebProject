    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>Fakedium</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
