@model IEnumerable<AuthorListModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Create" asp-controller="Author">Create New Author</a>
    <a asp-action="DownloadExcel" asp-controller="Author">Download Excel</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Id </th>
            <th> Name </th>
            <th> Surname </th>
            <th> Age </th>
            <th> CreatedDate </th>
            <th> UpdatedDate  </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Id </td>
                <td> @item.Name </td>
                <td> @item.Surname  </td>
                <td> @item.Age </td>
                <td> @item.CreatedDate </td>
                <td> @item.UpdatedDate </td>
                <td>
                    @Html.ActionLink("Update", "Update", new { item.Id }) |
                    @Html.ActionLink("Details", "Details", new { item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
